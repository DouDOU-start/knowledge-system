    "configurations": [
        {
            "name": "Launch GoFrame Application",
            "type": "go",
            "request": "launch",
            "mode": "auto", // 或 "debug"
            "program": "${workspaceFolder}/main.go", // 你的主入口文件路径
            "env": {
                // 如果你有需要传递给应用程序的环境变量，可以在这里定义
                // "MY_ENV_VAR": "some_value"
            },
            "args": [], // 命令行参数，例如 "--gf.gcfg.file=/path/to/config.yaml"
            "cwd": "${workspaceFolder}", // 应用程序的工作目录，通常是项目根目录
            "console": "integratedTerminal", // 调试输出到 VS Code 的集成终端
            "showLog": false // 显示调试器的日志输出
        },
    ]
}